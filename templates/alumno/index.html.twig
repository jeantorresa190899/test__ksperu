{% extends 'base.html.twig' %}

{% block title %}Alumnos{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1 class="color-text-alumnos">Vista de Alumnos</h1>

    {# <a href='{{ path('app_profesor') }}'>Ir a vista profesores</a> #}

    <div class="card p-4 mx-auto" style="width: 550px">
        {# {{ form(formulario) }} #}

        {{ form_start(formulario) }}

            <h2 class="text-center">Formulario</h2>

            <div class="form-group mb-2">
                {{ form_label(formulario.nombre) }}
                {{ form_widget(formulario.nombre, {'attr' : {'class' : 'form-control' }} ) }}
            </div>

            <div class="form-group mb-2">
                {{ form_label(formulario.apellidos) }}
                {{ form_widget(formulario.apellidos, {'attr' : {'class' : 'form-control' }}) }}
            </div>

            <div class="form-group mb-2">
                {{ form_label(formulario.edad) }}
                {{ form_widget(formulario.edad, {'attr' : {'class' : 'form-control' }}) }}
            </div>

            <div class="form-group mb-2">
                {{ form_label(formulario.foto) }}
                {{ form_widget(formulario.foto, {'attr' : {'class' : 'form-control' }}) }}
            </div>

            {{ form_row(formulario.Guardar, {'label' : 'Guardar datos', 'attr' : { 'class' : 'btn btn-primary mt-2 w-100' }}) }}

        {{ form_end(formulario) }}
    </div>

    {# <div>
        {% for alumno in alumnos %}
            {{ alumno.nombre }} | {{ alumno.apellidos }} | {{ alumno.edad }} </br>
        {% endfor %}      
    </div> #}

    <div class="container mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombres</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Edad</th>
                    <th scope="col">Foto</th>
                </tr>
            </thead>
            <tbody>
                {% for alumno in alumnos %}
                    <tr>
                        <th>{{ alumno.id }}</th>
                        <td>{{ alumno.nombre }}</td>
                        <td>{{ alumno.apellidos }}</td>
                        <td>{{ alumno.edad }}</td>
                        <td>
                            {% if (alumno.foto != null) %}
                                <img src="{{ asset('img/' ~ alumno.foto) }}" width="60" height="60" alt="Foto Alumno" class="img-thumbnail">
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                
            </tbody>
        </table>
    </diV>

{% endblock %}
